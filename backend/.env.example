AI_LOTTO_APP_ENV=dev
AI_LOTTO_DB_URL=sqlite:///./data/ai_lotto.db

# JWT Secret (REQUIRED for production)
# Generate with: openssl rand -hex 32
JWT_SECRET=

# JWT Token TTL (seconds)
AI_LOTTO_JWT_TTL_SECONDS=21600
AI_LOTTO_JWT_REFRESH_TTL_SECONDS=1209600

# Cookie settings (auto-configured based on APP_ENV if not set)
AI_LOTTO_COOKIE_SECURE=
AI_LOTTO_COOKIE_SAMESITE=

# CORS allowed origins (comma-separated)
FRONTEND_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# SMS provider placeholders (fill after vendor selection)
AI_LOTTO_SMS_PROVIDER=stub
AI_LOTTO_SMS_API_KEY=
AI_LOTTO_SMS_API_SECRET=
AI_LOTTO_SMS_SENDER_ID=

# Optional external APIs (OAuth)
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Admin identifiers (comma-separated usernames)
AI_LOTTO_ADMIN_IDENTIFIERS=

# Logging
AI_LOTTO_LOG_PATH=logs/ai_lotto.log
